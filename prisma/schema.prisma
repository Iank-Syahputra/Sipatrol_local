// File: prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// =============================================
// 1. ENUMS (Pilihan Role)
// =============================================
enum Role {
  admin
  security
}

// =============================================
// 2. MODEL TABEL
// =============================================

// Tabel: units
model Unit {
  id        String   @id @default(uuid()) // Pengganti gen_random_uuid()
  name      String
  district  String
  createdAt DateTime @default(now()) @map("created_at")

  // Relasi (Hubungan ke tabel lain)
  profiles  Profile[]
  locations UnitLocation[]
  reports   Report[]

  @@map("units") // Nama tabel di MySQL tetap 'units'
}

// Tabel: profiles (Pengganti User Clerk)
model Profile {
  // Kita ubah ID jadi UUID juga agar seragam
  id             String   @id @default(uuid()) 
  username       String?  @unique // Kolom baru untuk Login
  password       String?  // WAJIB ADA: Untuk simpan password terenkripsi
  fullName       String   @map("full_name")
  role           Role     @default(security)
  phoneNumber    String?  @map("phone_number")
  
  assignedUnitId String?  @map("assigned_unit_id")
  assignedUnit   Unit?    @relation(fields: [assignedUnitId], references: [id], onDelete: SetNull)
  
  createdAt      DateTime @default(now()) @map("created_at")

  // Relasi
  reports        Report[]

  @@map("profiles")
}

// Tabel: report_categories
model ReportCategory {
  id        String   @id @default(uuid())
  name      String   @unique
  color     String?  @default("gray")
  createdAt DateTime @default(now()) @map("created_at")

  reports   Report[]

  @@map("report_categories")
}

// Tabel: unit_locations
model UnitLocation {
  id        String   @id @default(uuid())
  
  unitId    String   @map("unit_id")
  unit      Unit     @relation(fields: [unitId], references: [id], onDelete: Cascade)
  
  name      String
  createdAt DateTime @default(now()) @map("created_at")

  reports   Report[]

  // Mencegah nama lokasi kembar dalam 1 unit (UNIQUE constraint)
  @@unique([unitId, name])
  @@map("unit_locations")
}

// Tabel: reports (Tabel Utama)
model Report {
  id          String   @id @default(uuid())
  
  // Siapa yang lapor?
  userId      String   @map("user_id")
  user        Profile  @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Unit mana?
  unitId      String   @map("unit_id")
  unit        Unit     @relation(fields: [unitId], references: [id], onDelete: Cascade)
  
  // Kategori apa?
  categoryId  String?  @map("category_id")
  category    ReportCategory? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  
  // Lokasi spesifik mana?
  locationId  String?  @map("location_id")
  location    UnitLocation?   @relation(fields: [locationId], references: [id], onDelete: SetNull)
  
  // Data Laporan
  imagePath          String?  @map("image_path")
  notes              String?  @db.Text // Text panjang
  latitude           Float?
  longitude          Float?
  capturedAt         DateTime @map("captured_at")
  isOfflineSubmission Boolean @default(false) @map("is_offline_submission")
  
  // Cache nama lokasi (sesuai request SQL Anda)
  locationNameCached String?  @map("location_name_cached")
  
  createdAt          DateTime @default(now()) @map("created_at")

  @@map("reports")
}