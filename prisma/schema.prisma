generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Unit {
  id        String         @id @default(uuid())
  name      String
  district  String
  createdAt DateTime       @default(now()) @map("created_at")
  profiles  Profile[]
  reports   Report[]
  locations UnitLocation[]

  @@map("units")
}

model Profile {
  id             String   @id @default(uuid())
  username       String?  @unique
  password       String?
  fullName       String   @map("full_name")
  role           Role     @default(security)
  phoneNumber    String?  @map("phone_number")
  assignedUnitId String?  @map("assigned_unit_id")
  createdAt      DateTime @default(now()) @map("created_at")
  assignedUnit   Unit?    @relation(fields: [assignedUnitId], references: [id])
  reports        Report[]

  @@index([assignedUnitId], map: "profiles_assigned_unit_id_fkey")
  @@map("profiles")
}

model ReportCategory {
  id        String   @id @default(uuid())
  name      String   @unique
  color     String?  @default("gray")
  createdAt DateTime @default(now()) @map("created_at")
  reports   Report[]

  @@map("report_categories")
}

model UnitLocation {
  id        String   @id @default(uuid())
  unitId    String   @map("unit_id")
  name      String
  createdAt DateTime @default(now()) @map("created_at")
  reports   Report[]
  unit      Unit     @relation(fields: [unitId], references: [id], onDelete: Cascade)

  @@unique([unitId, name])
  @@map("unit_locations")
}

model Report {
  id                  String          @id @default(uuid())
  userId              String          @map("user_id")
  unitId              String          @map("unit_id")
  categoryId          String?         @map("category_id")
  locationId          String?         @map("location_id")
  imagePath           String?         @map("image_path")
  notes               String?         @db.Text
  latitude            Float?
  longitude           Float?
  capturedAt          DateTime        @map("captured_at")
  isOfflineSubmission Boolean         @default(false) @map("is_offline_submission")
  locationNameCached  String?         @map("location_name_cached")
  createdAt           DateTime        @default(now()) @map("created_at")
  category            ReportCategory? @relation(fields: [categoryId], references: [id])
  location            UnitLocation?   @relation(fields: [locationId], references: [id])
  unit                Unit            @relation(fields: [unitId], references: [id], onDelete: Cascade)
  user                Profile         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([categoryId], map: "reports_category_id_fkey")
  @@index([locationId], map: "reports_location_id_fkey")
  @@index([unitId], map: "reports_unit_id_fkey")
  @@index([userId], map: "reports_user_id_fkey")
  @@map("reports")
}

enum Role {
  admin
  security
}
